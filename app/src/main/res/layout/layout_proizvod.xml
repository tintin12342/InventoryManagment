<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/proizvodiLista"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ripple"
        android:elevation="2dp"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/prvi"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/imageViewProizvod"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/imeProizvoda"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/imeProizvoda"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/treci"
            android:layout_width="130dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/prvi"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/prvi"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/kod"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/id"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/treci"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/imeProizvoda"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/prvi"
            app:layout_constraintStart_toEndOf="@+id/imageViewProizvod"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewProizvod"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/prvi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>