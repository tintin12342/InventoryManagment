<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="hintColoroffWhite" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/offWhite</item>
    </style>

    <style name="hintColoroffBlack" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/offBlack</item>
    </style>

    <style name="hintColorGray" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/hintColor</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/colorPrimaryDark</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/colorWhite</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/borderColor</item>

        <!-- Hint for edit text -->
        <item name="android:hint">"Upi≈°ite ime proizvoda"</item>
    </style>

</resources>
